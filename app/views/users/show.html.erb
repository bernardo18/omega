<% provide(:title, current_user.name) %>
<div class="row">
  <aside class="span9">
    <section>
      <div class="form-group">
        <%= image_tag current_user.gravatar_url(:size => 100) %>
      </div>
      <div class="form-group">
        <h1>
          Apodo: <%= current_user.name.capitalize %>
          <p></p>
          Email: <%= current_user.email%>
          <p></p>
          <%= link_to "Editar Usuario", edit_user_registration_path ,
            class: "btn btn-large btn-primary" %>
          <%= link_to "Modo Vacaciones", "#" ,
            class: "btn btn-large btn-primary" %>
        </h1>
      </div>  
    </section>
  </aside> 
</div>
<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Perfil completo</a></li>
    <li><a href="#tab2" data-toggle="tab">Islas</a></li>
    <li><a href="#tab3" data-toggle="tab">Alianza</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <p>Datos extras</p>
      <%= link_to "Editar Datos Extras", "#" ,
            class: "btn btn-large btn-primary" %>
    </div>
    <div class="tab-pane" id="tab2">
      <p>Cargado de Islas</p>
    </div>
    <div class="tab-pane" id="tab3">
      <p>Cargado de Alianzas</p>
    </div>
  </div>
</div>
